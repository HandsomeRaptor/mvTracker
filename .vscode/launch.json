    "version": "0.2.0",
    "configurations": [

        {
            "name": "Build and Launch",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Makefile (silent)",
            "program": "${workspaceFolder}/motion_detect",
            "args": [
                "-g","60",
                //"-o","2.yuv",
                //"-s","0",
                //"-a","5",
                //"-c",
                "-p","1",
                "/root/Videos/highway.mp4"
                ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{"name":"LD_LIBRARY_PATH", "value":"build_system/target/lib/"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/motion_detect",
            "args": [
                "-g","0",
                //"-o","2.yuv",
                //"-s","0",
                //"-a","5",
                //"-c",
                "-p","1",
                "/root/Videos/highway.mp4"
                ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{"name":"LD_LIBRARY_PATH", "value":"build_system/target/lib/"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}